<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    android:layout_marginTop="5dp"
    app:cardCornerRadius="4dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/app_main_primary">

        <ImageView
            android:id="@+id/fragment_contest_list_item_image"
            android:layout_width="70dp"
            android:layout_height="50dp"
            android:layout_marginLeft="20dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.19999999"
            app:srcCompat="@drawable/ic_contest_public" />

        <TextView
            android:id="@+id/fragment_contest_list_item_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:text="Walk a ton"
            android:textSize="22sp"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@+id/fragment_contest_list_item_image"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/fragment_contest_list_item_goal_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="STEPS"
            android:textSize="18sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/fragment_contest_list_item_goal_image"
            app:layout_constraintTop_toBottomOf="@+id/fragment_contest_list_item_creator" />

        <TextView
            android:id="@+id/fragment_contest_list_item_goal_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:text="Goal: 1000"
            android:textSize="18sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/fragment_contest_list_item_goal_type"
            app:layout_constraintTop_toBottomOf="@+id/fragment_contest_list_item_creator" />

        <TextView
            android:id="@+id/fragment_contest_list_item_type"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:background="@color/app_main_secondary"
            android:gravity="center"
            android:padding="5dp"
            android:text="PUBLIC"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/fragment_contest_list_item_image" />

        <ImageView
            android:id="@+id/fragment_contest_list_item_goal_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/fragment_contest_list_item_image"
            app:layout_constraintTop_toBottomOf="@+id/fragment_contest_list_item_creator"
            app:srcCompat="@drawable/ic_steps" />

        <TextView
            android:id="@+id/fragment_contest_list_item_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="5dp"
            android:text="Description"
            app:layout_constraintStart_toEndOf="@+id/fragment_contest_list_item_image"
            app:layout_constraintTop_toBottomOf="@+id/fragment_contest_list_item_name" />

        <TextView
            android:id="@+id/fragment_contest_list_item_creator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:text="Creator: example@example.com"
            app:layout_constraintStart_toEndOf="@+id/fragment_contest_list_item_image"
            app:layout_constraintTop_toBottomOf="@+id/fragment_contest_list_item_description" />

        <ImageView
            android:id="@+id/fragment_contest_list_item_joined_image"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_margin="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_joined" />

        <TextView
            android:id="@+id/fragment_contest_list_item_goal_value_meters"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:text="(m)"
            app:layout_constraintBottom_toBottomOf="@+id/fragment_contest_list_item_goal_value"
            app:layout_constraintStart_toEndOf="@+id/fragment_contest_list_item_goal_value"
            app:layout_constraintTop_toTopOf="@+id/fragment_contest_list_item_goal_value" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>