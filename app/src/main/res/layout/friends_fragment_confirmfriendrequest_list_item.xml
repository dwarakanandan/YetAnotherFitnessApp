<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="10dp"
    tools:layout_editor_absoluteY="25dp">

    <TextView
        android:id="@+id/confirmFriendImage"
        android:layout_width="40sp"
        android:layout_height="40sp"
        android:background="@drawable/circle"
        android:gravity="center"
        android:padding="1dp"
        android:textSize="22sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/confirmFriendName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingLeft="30sp"
        android:textSize="20sp"

        app:layout_constraintStart_toEndOf="@+id/confirmFriendImage"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/imageConfirmFriendButton"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@color/app_main_secondary"
        android:src="@drawable/ic_done"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

    </ImageButton>

    <TextView
        android:id="@+id/emailIdConfirmFriend"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="30dp"
        android:text="TextView"
        app:layout_constraintStart_toEndOf="@+id/confirmFriendImage"
        app:layout_constraintTop_toBottomOf="@+id/confirmFriendName" />

    <ImageButton
        android:id="@+id/friendCancelButton"
        android:layout_width="40dp"
        android:layout_height="40dp"

        android:layout_marginEnd="8dp"
        android:background="@color/app_main_secondary"
        app:layout_constraintEnd_toStartOf="@+id/imageConfirmFriendButton"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_cancel" />

</androidx.constraintlayout.widget.ConstraintLayout>
