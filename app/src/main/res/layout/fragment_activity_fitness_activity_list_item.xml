<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:layout_marginTop="2dp"
    app:cardCornerRadius="4dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/app_main_primary"
        android:padding="5dp">

        <ImageView
            android:id="@+id/fitness_activity_list_item_image"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:contentDescription="@string/title_activity"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/fitness_activity_list_item_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="TextView"
            android:textSize="22sp"
            app:layout_constraintStart_toEndOf="@+id/fitness_activity_list_item_image"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/fitness_activity_list_item_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TextView"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/fitness_activity_list_item_image_distance"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginLeft="10dp"
            android:contentDescription="TODO"
            android:paddingLeft="5dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/fitness_activity_list_item_image"
            app:layout_constraintTop_toBottomOf="@+id/fitness_activity_list_item_title"
            app:srcCompat="@drawable/ic_distance" />

        <TextView
            android:id="@+id/fitness_activity_list_item_distance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:padding="2dp"
            android:text="10"
            android:textSize="18sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/fitness_activity_list_item_image_distance"
            app:layout_constraintTop_toBottomOf="@+id/fitness_activity_list_item_title" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginLeft="10dp"
            android:paddingLeft="5dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/fitness_activity_list_item_distance"
            app:layout_constraintTop_toBottomOf="@+id/fitness_activity_list_item_title"
            app:srcCompat="@drawable/ic_clock" />

        <TextView
            android:id="@+id/fitness_activity_list_item_duration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="25"
            android:textSize="18sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/imageView2"
            app:layout_constraintTop_toBottomOf="@+id/fitness_activity_list_item_title" />

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginLeft="10dp"
            android:paddingLeft="5dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/fitness_activity_list_item_duration"
            app:layout_constraintTop_toBottomOf="@+id/fitness_activity_list_item_title"
            app:srcCompat="@drawable/ic_flame" />

        <TextView
            android:id="@+id/fitness_activity_list_item_calories"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="35"
            android:textSize="18sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/imageView3"
            app:layout_constraintTop_toBottomOf="@+id/fitness_activity_list_item_title" />

        <ImageView
            android:id="@+id/fitness_activity_list_item_image_step"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginLeft="10dp"
            android:paddingLeft="5dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/fitness_activity_list_item_calories"
            app:layout_constraintTop_toBottomOf="@+id/fitness_activity_list_item_title"
            app:srcCompat="@drawable/ic_steps" />

        <TextView
            android:id="@+id/fitness_activity_list_item_steps"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="150"
            android:textSize="18sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/fitness_activity_list_item_image_step"
            app:layout_constraintTop_toBottomOf="@+id/fitness_activity_list_item_title" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>