<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="10dp">

    <TextView
        android:id="@+id/allFriendImage"
        android:layout_width="50sp"
        android:layout_height="50sp"
        android:background="@drawable/circle"
        android:gravity="center"
        android:padding="1dp"
        android:textSize="22sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textViewAllFriends"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingLeft="30sp"
        android:textSize="20sp"

        app:layout_constraintStart_toEndOf="@+id/allFriendImage"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/imageAddFriendButton"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@color/app_main_secondary"
        android:src="@drawable/ic_account_plus"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

    </ImageButton>

    <TextView
        android:id="@+id/emailIdFriend"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="30dp"
        android:text="TextView"
        app:layout_constraintStart_toEndOf="@+id/allFriendImage"
        app:layout_constraintTop_toBottomOf="@+id/textViewAllFriends" />

</androidx.constraintlayout.widget.ConstraintLayout>
